doctype strict
html(lang="en")
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Rate Calculator | Trades
    body
        div.container
            each trade in allPosibleTrades
                div.alert.alert-primary.mb-0
                    p Comparación: #{trade.id}
                    div.row
                        div.col-sm-6
                            div.card
                                div.card-body
                                    h5.card-title Vendedor: #{trade.buyer.name}
                                    p(class="card-text") 
                                    p(class="card-text") Operaciones realizadas: 
                                        strong #{trade.buyer.trade_count}
                                    p(class="card-text") Puntuación:
                                        strong #{trade.buyer.feedback_score}
                                    p(class="card-text") Minimo:
                                        strong #{trade.buyer.min_amount}
                                    a(href=`${trade.buyer.public_view}` class="btn btn-success") Comprar
                        div.col-sm-6
                            div.card
                                div.card-body
                                    h5.card-title Comprador: #{trade.seller.name}
                                    p(class="card-text") 
                                    p(class="card-text") Operaciones realizadas:
                                        strong #{trade.seller.trade_count}
                                    p(class="card-text") Puntación:
                                        strong #{trade.seller.feedback_score}
                                    p(class="card-text") Minimo:
                                        strong #{trade.seller.min_amount}
                                    a(href=`${trade.seller.public_view}` class="btn btn-danger") Vender
                        
                div.alert.alert-warning
                    h1 Cálculos de esta operación.
                    h2 Tasa: 
                        strong #{trade.exchange_rate_to_bsf}
                    h2 Costo BTC en 
                        strong #{trade.tem_price_buyer}
                    h2 Costo BTC en 
                        strong #{trade.tem_price_seller}

                        