<!DOCTYPE html>
html(lang="en")
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Trades
    body
        .container
            each trade in trades
                .alert.alert-primary
                    p
                        a(class="btn btn-primary" data-toggle="collapse" href=`#collapseExample${trade.id}` role="button" aria-expanded="false" aria-controls="collapseExample") #{trade.seller.name}
                    table(class='table table-responsive-sm table-striped')
                            tr
                                th Minimo
                                th Banco
                                th Comprarle...
                            tr
                                td #{trade.seller.min_amount}
                                td #{trade.seller.bank_name}
                                td 
                                        a(class="btn btn-warning" href=`${trade.seller.public_view}`) Hacer Compra...
                    div(class="collapse" id=`collapseExample${trade.id}`)
                        table(class='table table-responsive-sm table-striped')
                            th Comprador
                            th Minimo
                            th Banco
                            th Tasa
                            th Venderle
                            each buyer in trade.buyers
                                tr
                                    td(scope="col") #{buyer.name}
                                    td(scope="col") #{buyer.min_amount}
                                    td(scope="col") #{buyer.bank_name}
                                    td(scope="col") #{buyer.exchange_rate_to_bsf}
                                    td(scope="col") 
                                        a(class="btn btn-success" href=`${buyer.public_view}`) Hacer venta...
                                    



    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
    script( src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous")